// carousel

  /* external css: flickity.css */

  * { box-sizing: border-box; }

  body { font-family: sans-serif; }



  .carousel-main {
    background: #FAFAFA;
    margin-bottom: 40px;
    width: 519px;
    height: 833px;
    position:absolute;
    top:0;


    .flickity-button-icon {
      display:none;
    }

    .carousel-cell {
      width: 519px;
      height: 831px;
      margin-right: 10px;
      background: #8C8;
      border-radius: 5px;
      background-size: contain !important;
    }

  }

  /* cell number */

  .carousel-nav {
    background: #fff;
    margin-bottom: 40px;
    width:400px;
    height: 160px !important;
    position: absolute;
    top: 856px;
    left: 49px;

      .previous {
        padding-left: 0px !important;
        svg {
          margin-left: -11px;
        }
      }

      .next {
        padding-right: 0px !important;
      }

     .previous, .next {
      height: 160px;
      width:56px;
      position: absolute;
      background-color: white !important;
      border-radius: 0 !important;

      svg {
        position: relative !important;
      }
    }
  }

  .carousel-nav .carousel-cell {
    margin: 0 10px;
    height: 160px;
    width: 160px;
    display: flex;
    align-items: center;
    justify-content: center;
  }


  .carousel-nav .carousel-image {
    height: 136px;
    width: 136px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover!important;

  }



  .carousel-nav .carousel-cell:before {
    font-size: 50px;
    line-height: 80px;
  }



